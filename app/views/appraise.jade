.ui.page.grid
  .six.wide.column
    h2.ui.inverted.header.black Trainer考评页
  .ten.wide.column
    h3.ui.inverted.header.black jjjjjjjjjjjjjj
.ui.grid(ng-controller="appraiseController")
  .two.wide.column &nbsp;
  .two.wide.column
    .ui.fluid.vertical.steps
      .step
        .content
          .title 考评类型
      .step(ng-class="{true: 'active', false: 'completed'} [vm.day_appraises_signal]")
        .content
          .title 日考评
      .step(ng-class="{true: 'active', false: 'completed'} [vm.week_appraises_signal]")
        .content
          .title 周考评
      .step(ng-class="{true: 'active', false: 'completed'} [vm.month_appraises_signal]")
        .content
          .title 月考评
      .step(ng-class="{true: 'active', false: 'completed'} [vm.season_appraises_signal]")
        .content
          .title 季考评
  .ten.wide.column
    table.ui.table(ng-show="vm.day_appraises_signal")
      thead
        tr
          th
            span {{vm.trainee_name}}
          th
            span 考评等级
          th
            span 考评理由
          th
            span 考评人
          th
            span 组别
          th
            span 评价日期
      tbody
        tr(ng-repeat="appraise in vm.appraises")
          td
            span &nbsp;
          td
            span {{appraise.level}}
          td
            span {{appraise.comment}}
          td
            span {{appraise.appraiser.username}}
          td
            span {{appraise.group.name}}
          td
            span {{appraise.appraised_date}}
